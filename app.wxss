.btn {
  margin: 0;
  padding: 24rpx 32rpx;
  background: #1677ff;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
}

.error-msg {
  color: #ff4d4f;
  margin-top: 20rpx;
  text-align: center;
  font-size: 24rpx;
}
.container {
  min-height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  flex-grow: 1;
  box-sizing: border-box;
}
