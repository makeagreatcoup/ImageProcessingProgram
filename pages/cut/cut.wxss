.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-area {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.preview-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 8rpx;
}

.processed {
  margin-top: 20rpx;
}

.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}