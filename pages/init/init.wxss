.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.size-selector, .color-selector {
  width: 100%;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.size-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.size-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.size-item:active {
  background-color: #e9ecef;
}

.color-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 16rpx 0;
}

.color-item {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-item.selected {
  transform: scale(1.15);
  border-color: #007AFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.2);
}

.preview-area {
  width: 100%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.preview-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.preview-image.processed {
  border: 3rpx solid #007AFF;
}

.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn {
  background: linear-gradient(135deg, #007AFF, #0056b3);
  color: white;
  border-radius: 12rpx;
  font-weight: 500;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
  transition: all 0.3s ease;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.15);
}

.error-msg {
  color: #ff4d4f;
  margin-top: 24rpx;
  text-align: center;
  font-size: 28rpx;
  padding: 16rpx;
  background-color: #fff2f0;
  border-radius: 8rpx;
  width: 100%;
}