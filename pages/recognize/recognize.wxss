.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-area {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.preview-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 8rpx;
}

.recognition-result {
  width: 100%;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.result-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-content {
  word-break: break-all;
}

.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}



.error-msg {
  color: #ff4d4f;
  margin-top: 20rpx;
  text-align: center;
}